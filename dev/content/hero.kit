<section id="hero">
    <img src="img/hero/hero.jpg" alt="large airplane hero image" id="hero-img">

    <article>
        <section class="global-css-grid" id="hero-checklist">
            <div>
                <h2>What to bring?</h2>
                <p>Click here for a checklist of what to bring</p>
                <button><span class="show-for-lg">Details</span> <img src="img/global/right-arrow.svg"
                        alt="arrow icon"></button>
            </div>
        </section>

        <section class="global-css-grid" id="hero-location">
            <div>
                <p>Location: Southern California, Ca, USA</p>
                <p>Aircraft: Air Bus 380</p>
                <button><span class="show-for-lg">Details</span> <img src="img/global/right-arrow.svg"
                        alt="arrow icon"></button>
            </div>
        </section>
    </article>

</section>

<section id="hero-sub-container">
    <section id="planning" class="hero-sub-content">
        <section>
            <h1>Planning your next show?</h1>
            <button>Start here</button>
        </section>
        <aside>
            <img src="img/hero/planning.jpg" alt="flying airplane">
        </aside>
    </section>
    
    <section id="tickets" class="hero-sub-content">
        <section>
            <h1>Need tickets?</h1>
            <button>Order here</button>
        </section>
        <aside>
            <img src="img/hero/tickets.jpg" alt="flying airplane">
        </aside>
    </section>
</section>
